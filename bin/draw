#!/usr/bin/env python


"""draw.

Usage:
  draw
  draw --help
  draw --version

Options:
  -h --help  Show this screen.
  --version  Show version.
"""
from docopt import docopt


def main():
    args = docopt(__doc__, version='draw v0.1.0')
    print('hello from the draw program')
    print('args:\n{}'.format(args))


if __name__ == '__main__':
    main()
